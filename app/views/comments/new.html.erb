<h1>New comment</h1>

<%= form_for(@comment) do|f| %>
    <%= f.hidden_field :post_id %>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>

    <div class="field">
      <%= f.submit "Post Comment" %>
    </div>
<% end %>

<%= link_to 'Back', posts_path %>
